<div class="container">
    <h1>Business List</h1>
    <% if(displayName) { %>
        <a href="/business-add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Business</a>
        <% } %>
            <div class="row">
                <div class="col">

                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col" class="text-center">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Contact</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="businessList">
                            <!-- Repeatable Rows -->
                            <% for(let count=0; count < businessData.length; count++) { %>
                                <tr>
                                    <th scope="row" class="text-center">
                                        <%= count + 1 %>
                                    </th>
                                    <td>
                                        <%= businessData[count].ContactName %>
                                    </td>
                                    <td>
                                        <%= businessData[count].EmailAddress %>
                                    </td>
                                    <td>
                                        <%= businessData[count].ContactNumber %>
                                    </td>

                                    <% if(displayName) { %>

                                        <td class="text-center col-1">
                                            <a href="/business-edit/<%= businessData[count]._id %>"
                                                class="btn btn-primary btn-sm">
                                                <i class="fas fa-pencil-alt"></i> Edit</a>
                                        </td>

                                        <td class="text-center col-1">
                                            <a href="/business-delete/<%= businessData[count]._id %>"
                                                class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Delete</a>
                                        </td>

                                        <% } %>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
</div>